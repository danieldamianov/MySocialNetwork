@using System.Security.Claims


<script src="~/js/Profile/JavaScript.js"></script>
<link rel="stylesheet" href="~/css/Users/profile.css" />


@if (this.User.FindFirstValue(ClaimTypes.NameIdentifier) == Model.UserId)
{
    <a class="nav-link text-light btn btn-light text-dark" href="/Users/Profile?userId=@this.User.FindFirstValue(ClaimTypes.NameIdentifier)">
        <img style="border-radius: 50%;" width="100" height="100" src="@this.ViewData["profileImageCode"]" alt="Avatar"  />
        @User.Identity.Name
    </a>
    <div>
        <h1><a class="btn btn-success col-8" href="/Home/NewPost">Add new post to your page</a></h1>
    </div>
    @*@foreach (var post in Model.UserPosts)
        {
            <p>@post.Description</p>
            <img src="@post.Code" style="max-height: 500px" />
        }*@
}
else
{
    <h1>This is the profile of @Model.Name</h1>
    <a class="btn-success" href="/Users/Follow/?followerId=@this.User.FindFirstValue(ClaimTypes.NameIdentifier)&followedId=@Model.UserId">
        Follow User
    </a>
    @*@foreach (var post in Model.UserPosts)
        {
            <p>@post.Description</p>
            <img src="@post.Code" style="max-height: 500px" />
        }*@
}

<div class="row">
    @foreach (var post in Model.UserPosts)
    {
        <div class="column">
            <img class="text-success" src="@post.Code" alt="@post.Description ,Created on: @post.DateTimeCreated " style=" width: 300px; height: 300px ;border : 5px solid" onclick="myFunction(this);">
        </div>
    }
</div>

<div class="container">
    <!-- Close the image -->
    <span onclick="this.parentElement.style.display='none'" class="closebtn">&times;</span>
    <!-- Image text -->
    <div class="text-dark" id="imgtext"></div>

    <!-- Expanded image -->
    <img class="text-success" id="expandedImg" style="max-height: 600px ;border : 5px solid" alt="Click Image To Show in Real Size">

</div>






